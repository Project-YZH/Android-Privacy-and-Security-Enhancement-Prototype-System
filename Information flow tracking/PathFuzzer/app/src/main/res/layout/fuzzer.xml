<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="250dip"
	android:layout_height="550dip">

	<TextView 
	    android:id="@+id/type_surportted"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="@string/type_surportted" 
		android:layout_marginLeft="5dip"
		android:textSize="15sp"
		android:textColor="@color/black"/>
	
	<Spinner 
	    android:id="@+id/type_select"
		android:layout_width="fill_parent"
		android:layout_height="50dip"
		android:layout_marginTop="5dip">
	</Spinner>
	

	<ListView 
	    android:id="@+id/cmp_listview" 
	    android:layout_marginTop="5dip"
	    android:layout_width="fill_parent"  
	    android:layout_height="300dip" >
    </ListView> 
 
	<RelativeLayout
		android:visibility="gone"

		android:layout_width="fill_parent"
	    android:layout_height="80dip"
	    android:layout_marginTop="10dip" >
	    
	   	<Button 
		    android:id="@+id/fuzz_all_null"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_alignParentLeft="true"
			android:text="@string/fuzz_all_null" 
			android:visibility="gone">
		</Button>
		<Button
		    android:id="@+id/fuzz_all_se"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_alignParentRight="true"
			android:layout_toRightOf="@id/fuzz_all_null"
			android:text="@string/fuzz_all_se"
			android:visibility="gone">
		</Button>
	</RelativeLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<Button
			android:layout_weight="3"
			android:id="@+id/zr"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:text="   载入路径指引   "
			android:visibility="visible">
		</Button>
		<Button
			android:layout_weight="1"
			android:id="@+id/path"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/zr"
			android:text=""
			android:visibility="visible">
		</Button>

	</LinearLayout>
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/hqcs"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"

			android:text="   获取参数   "
			android:visibility="visible">
		</Button>

	</RelativeLayout>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/qhljzy"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"

			android:text="   切换路径指引   "
			android:visibility="visible">
		</Button>

	</RelativeLayout>

	
</LinearLayout>
